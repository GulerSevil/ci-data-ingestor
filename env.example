# Copy this file to `.env` for local development

NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Choose 'elasticsearch' or 'none'
OBSERVABILITY_PROVIDER=none

# Elasticsearch settings (required if provider is 'elasticsearch')
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=ci-events
# Single base64 API key token (Authorization: ApiKey <token>)
ELASTICSEARCH_API_KEY=

# GitHub webhook HMAC secret (optional but recommended)
GITHUB_WEBHOOK_SECRET=


